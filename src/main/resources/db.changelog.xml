<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation=
    "http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
     http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="1" author="mthmulders">
    <createTable tableName="proposals">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints nullable="false" primaryKey="true" />
      </column>
      <column name="user_id" type="bigint">
        <constraints nullable="false" />
      </column>
      <column name="title" type="nvarchar(256)">
        <constraints nullable="false" />
      </column>
      <column name="description" type="nvarchar(2048)">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
